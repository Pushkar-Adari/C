#include <stdio.h>
void main()
{
    int a,b,op;
    
    printf ("Enter the value of a: ");
    scanf ("%d",&a);
    printf ("Enter the value of b: ");
    scanf ("%d",&b);
    
    printf ("Press 1 for addition\nPress 2 for subtraction\nPress 3 for division\nPress 4 for multiplication");
    printf ("\nEnter the number corresponding to your operation: ");
    scanf ("%d",&op);
    
    switch(op)
    {
    case 1:
        printf ("The sum of %d and %d is equal to %d.",a,b,a+b);
    case 2:
        printf ("The value of %d subtracted from %d is equal to %d.",a,b,a-b);
    case 3:
        printf ("%d divided by %d gives %d",a,b,a/b);
    case 4:
        printf ("The product of %d and %d is %d.",a,b,a*b);
        break;
    default:
        printf ("Please select a valid operation.");
    }
}
