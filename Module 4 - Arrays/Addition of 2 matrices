// addition of 2 matrices
#include <stdio.h>
void main()
{
    int i,j;
    int a[2][2];
    int b[2][2];
    int c[2][2];
    printf ("enter the elements of the first matrix: ");
    for (i=0;i<2;i++)
    {
        for (j=0;j<2;j++)
        {
            scanf ("%d",&a[i][j]);
        }
    }
    printf ("enter the elements of the second matrix: ");
    for (i=0;i<2;i++)
    {
        for (j=0;j<2;j++)
        {
            scanf ("%d",&b[i][j]);
        }
    }
    for (i=0;i<2;i++)  
    {  
        for (j=0;j<2;j++)  
        {  
            c[i][j] = a[i][j]+b[i][j];  
        }  
    }  
    for (i=0;i<2;i++)  
    {  
        for (j=0;j<2;j++)
        {
            printf("%d ",c[i][j]);
        }
    }
}
